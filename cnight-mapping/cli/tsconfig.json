{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true,
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
